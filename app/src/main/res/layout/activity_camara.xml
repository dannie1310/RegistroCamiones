<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_camara"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.grupohi.registrocamiones.registrocamiones.CamaraActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/MainLayout"
        android:layout_alignBottom="@+id/textViewMensaje"
        android:weightSum="1">

        <TextView
            android:text="SELECCIONE EL TIPO DE IMAGEN:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Tipo"
            android:textAppearance="@android:style/TextAppearance.Material.Menu" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerTipos" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:id="@+id/set_picture"
            android:layout_width="match_parent"
            android:layout_height="327dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="@string/contentImagen"
            android:layout_below="@+id/show_options_button"
            android:layout_weight="0.97" />


        <Button
            android:text="GUARDAR IMAGEN"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/buttonGuardar"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="18sp" />



    </LinearLayout>



</RelativeLayout>
